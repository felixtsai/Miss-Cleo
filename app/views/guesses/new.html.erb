<h1>Gender Guess</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@guess) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :height %>
      <%= f.text_field :height %>

      <%= f.label :weight %>
      <%= f.text_field :weight %>



      <%= f.submit "Ask Miss Clea to Guess", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>